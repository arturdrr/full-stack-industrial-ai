{
  "dashboard": {
    "title": "ðŸ§  AI Ethics & Governance Dashboard",
    "panels": [
      {
        "title": "Model Fairness Score",
        "type": "gauge",
        "targets": ["avg(ai_fairness_score)"],
        "thresholds": [
          {"color": "red", "value": 0.7},
          {"color": "yellow", "value": 0.85},
          {"color": "green", "value": 0.95}
        ]
      },
      {
        "title": "Bias Alerts (24h)",
        "type": "stat",
        "targets": ["sum(increase(ai_bias_alerts_total[24h]))"]
      },
      {
        "title": "Response Quality by Demographics",
        "type": "heatmap",
        "targets": ["ai_response_quality by (demographic_group, time)"]
      },
      {
        "title": "Cost Fairness Distribution", 
        "type": "bargauge",
        "targets": ["avg(ai_cost_per_user) by (user_tier)"]
      },
      {
        "title": "Routing Decision Explanations",
        "type": "logs",
        "targets": ["ai_routing_explanations"]
      }
    ]
  }
}
